<%- include('header') -%>
<%- include('menu') -%>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Játékosok
                <% if (typeof jatekos === 'undefined') { %>
                    Létrehozás
                <% }else{ %>
                    Módosítás
                <% } %>
            </h2>
            <small>Klubbok: <%= csapat.csapatnev %></small>
            <hr/>
            <form method="post">
                <div class="form-group">
                    <label for="nev">Név</label>
                    <input type="text" class="form-control" id="nev" name="nev"
                           value="<%= (typeof jatekos === 'undefined') ? '' : jatekos.nev %>">
                </div>
                <div class="form-group">
                    <label for="mezszam">Mezszám</label>
                    <input type="text" class="form-control" id="mezszam" name="mezszam"
                           value="<%= (typeof jatekos === 'undefined') ? '' : jatekos.mezszam %>">
                </div>
                <div class="form-group">
                    <label for="teljesitmeny">Teljesítmény</label>
                    <input type="text" class="form-control" id="teljesitmeny" name="teljesitmeny"
                           value="<%= (typeof jatekos === 'undefined') ? '' : jatekos.teljesitmeny %>">
                </div>
                <input type="submit" class="btn btn-primary" value="Mentés"/>
                <a class="btn btn-link" href="/jatekos/<%= csapat._id %>">Mégsem</a>
            </form>
        </div>
    </div>
</div>

<%- include('footer') -%>
