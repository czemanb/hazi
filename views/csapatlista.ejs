<%- include('header') -%>
<%- include('menu') -%>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Csapat lista</h2>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        Csapatnév
                    </th>
                    <th>
                        Város
                    </th>
                    <th>
                        Stadion
                    </th>
                    <th>
                        &nbsp;
                    </th>
                </tr>
                    <% csapatok.forEach(function(egyCsapat){ %>
                    <tr>
                        <td>
                            <%= egyCsapat.csapatnev %>
                        </td>
                        <td>
                            <%= egyCsapat.varos %>
                        </td>
                        <td>
                            <%= egyCsapat.stadion %>
                        </td>
                        <td style="width:30px;white-space: nowrap">
                            <a href="/jatekos/<%= egyCsapat._id %>" class="btn btn-sm btn-success">Játékosok</a>
                            <a href="/csapat/edit/<%= egyCsapat._id %>" class="btn btn-sm btn-primary"><i
                                        class="far fa-edit"></i></a>
                            <a href="/csapat/del/<%= egyCsapat._id %>" class="btn btn-sm btn-danger"><i
                                        class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% }); %>
            </table>
            <br/>
            <a href="/csapat/new" class="btn btn-block btn-primary">Új csapat hozzáadása</a>
        </div>
    </div>
</div>

<%- include('footer') -%>
